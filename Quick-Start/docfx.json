{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "markdownEngineProperties": {
      "alerts": {
        "TODO": "alert alert-secondary"
      },
      "plantUml": {
        "outputFormat": "svg",
        "remoteUrl": "http://www.plantuml.com/plantuml/",
        "renderingMode": "remote"
      }
    },
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "my-template" 
    ],
    "globalMetadata": {
      "_appName": "DocFx: Quick Start",
      "_appTitle": "DocFx: Quick Start",
      "_enableSearch": true,
      "pdf": false
    }
  }
}